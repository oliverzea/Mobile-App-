<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendOTP.SendOTP"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sendOTPToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Xác thực mã OTP"
        android:background="@color/orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mã OTP: "
            android:textSize="25sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/numberOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            />
    </LinearLayout>

    <Button
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="Xác thực"
        android:background="@drawable/botron"
        android:id="@+id/btnComfirmOTP"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Bạn không nhận được mã OTP ?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/OTPAgain"
        />
</LinearLayout>