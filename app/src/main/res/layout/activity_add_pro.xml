<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".Activity.AddProActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbarAddPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/arrow_back"
        app:titleCentered="true" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter name of product :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtNamePro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corner_rounded_orange"
        android:ems="10"
        android:hint="Nhập tên sản phẩm "
        android:inputType="text"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corner_rounded_orange"
        android:ems="10"
        android:hint="Nhập giá sản phẩm"
        android:inputType="text"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corner_rounded_orange"
        android:ems="10"
        android:hint="Nhập số lượng "
        android:inputType="text"
        android:padding="16dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose category :"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnChooseCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_rounded_gray"
        android:drawableRight="@drawable/arrow_down"
        android:textColor="#5A5A5A" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose size :"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnChooseSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_rounded_gray"
        android:drawableRight="@drawable/arrow_down"
        android:textColor="#100F0F" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add image :"
        android:textSize="16sp" />
        <ImageView
            android:id="@+id/ivProAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_rounded_color"
            app:strokeColor="@color/app_main_bg"
            app:strokeWidth="1dp" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
    <Button
        android:id="@+id/btnSave"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_main_bg"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/corner_rounded_color"
        android:text="Save" />


</LinearLayout>