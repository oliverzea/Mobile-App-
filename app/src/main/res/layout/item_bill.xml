<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linearBill"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="20sp"
    >

    <ImageView
        android:layout_marginTop="20sp"
        android:id="@+id/imgBill"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/icon_user"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn hàng thứ: "
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/txtNameProductBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên san phẩm: "
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/txtPriceProductBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá san phẩm: "
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/txtQuantityProductBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng sản phẩm: "
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/txtTotalBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá tiền: "
            android:layout_marginBottom="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txtState"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="10sp"
            />
        <ImageView
            android:id="@+id/iconState"
            android:layout_width="50sp"
            android:layout_height="50sp"

            android:layout_marginEnd="0sp"
            />
    </LinearLayout>
</LinearLayout>