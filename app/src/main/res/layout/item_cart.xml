<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/linearClick"
    >
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/item_checkbox"
        android:checked="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:background="@drawable/a16"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/txtNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên san phẩm: "
                android:layout_marginBottom="10sp"
                />
            <TextView
                android:id="@+id/txtPriceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá san phẩm: "
                android:layout_marginBottom="10sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/subQuantity"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="-"/>
                <EditText
                    android:id="@+id/editQuantityCart"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="1"

                    />
                <Button
                    android:id="@+id/sumQuantity"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="+"/>


            </LinearLayout>
            <TextView
                android:id="@+id/txtPriceItemCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá tiền: "
                android:textSize="20sp"
                android:textColor="@color/red"
                />

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btnRemove"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@drawable/removeicon"

        />
</LinearLayout>